{
  "name": "bpm",
  "private": true,
  "version": "1.0.0",
  "description": "Создание бизнес процессов и документации",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "scripts": {
    "pretypeorm": "(rm -f ormconfig.json || :) && ts-node -r tsconfig-paths/register src/scripts/write-type-orm-config.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate -n",
    "typeorm:migration:run": "npm run typeorm -- migration:run",
    "build": "webpack --mode production --devtool source-map && nest build",
    "build:backend": "nest build",
    "build:frontend": "webpack --mode production --devtool source-map",
    "format": "prettier --write \"develop/**/*.ts\" \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:backend": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "webpack -w --mode production --devtool source-map && node dist/main",
    "start:frontend": "webpack serve --mode development --devtool source-map --hot --stats-children",
    "lint": "yarn lint:tsc && yarn lint:style && yarn format",
    "lint:tsc": "eslint \"{develop,src,test}/**/*.ts\" --fix",
    "lint:style": "stylelint {develop,src}/**/*.{css,scss} --fix --color",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.2",
    "@nestjs/core": "^10.3.2",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/typeorm": "^10.0.2",
    "@tanstack/react-query": "^5.51.21",
    "axios": "^1.7.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "docx": "^8.5.0",
    "global": "^4.4.0",
    "katex": "^0.16.11",
    "pg": "^8.12.0",
    "pizzip": "3.1.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.23.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "suneditor": "^2.46.3",
    "suneditor-react": "^3.6.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/dotenv-webpack": "^7.0.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/react": "^18.3.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-styled-components": "^2.1.4",
    "css-loader": "^7.1.2",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.19.2",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.40",
    "postcss-syntax": "^0.36.2",
    "prettier": "^3.2.5",
    "react-is": "18.3.1",
    "react-refresh": "^0.14.2",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.0",
    "sass-migrator": "^2.0.3",
    "source-map-support": "^0.5.21",
    "styled-components": "5.3.11",
    "stylelint": "^16.8.1",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.3.3",
    "webpack": "^5.93.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
